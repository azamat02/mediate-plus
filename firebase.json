{
  "functions": {
    "source": "functions",
    "runtime": "nodejs18"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/sms/**",
        "function": "smsProxy"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
